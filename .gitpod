image:
  file: .gitpod.Dockerfile
ports:
  - port: 6080
    protocol: "http"
    onOpen: open-preview
  - port: 5900
    onOpen: ignore
tasks:
  - init: |
      xrandr --fb 500x500
      make -j $(nproc) -C mpy-cross VARIANT=dev DEBUG=1
      make -j $(nproc) -C ports/unix VARIANT=dev DEBUG=1
    command: |
      ports/unix/micropython-dev -i lib/lv_bindings/examples/advanced_demo.py
vscode:
  extensions:
    - ms-vscode.cpptools

